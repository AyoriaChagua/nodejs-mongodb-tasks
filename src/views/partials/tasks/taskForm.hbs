<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Add a task</h3>
  <form action="/tasks/add" method="POST">
  <div class="m-2">
    <label for="title">Title:</label>
    <input type="text" class="form-control rounded-0 bg-dark text-white" name="title" placeholder="Title" id="title" />
  </div>
  <div class="m-2">
    <label for="description">Description:</label>
    <textarea 
      class="form-control rounded-0 bg-dark text-white"
      name="description"
      placeholder="Write your description"
      id="description"
    ></textarea>
  </div>
  <div class="m-2">
    <button class="btn btn-primary btn-sm mt-2">Add</button>
  </div>
</form>
</div>